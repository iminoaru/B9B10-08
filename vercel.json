{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "nodeVersion": "22.x",
        "distDir": "build"
      }
    }
  ],
  "routes": [
    { 
      "src": "/static/(.*)", 
      "dest": "/static/$1" 
    },
    { 
      "src": "/favicon.ico", 
      "dest": "/favicon.ico" 
    },
    { 
      "src": "/manifest.json", 
      "dest": "/manifest.json" 
    },
    { 
      "src": "/(.*)", 
      "dest": "/index.html" 
    }
  ],
  "build": {
    "env": {
      "NODE_OPTIONS": "--openssl-legacy-provider"
    }
  }
} 